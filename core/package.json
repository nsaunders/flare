{
  "name": "flare-core",
  "version": "0.2.1",
  "description": "Applicative-style UIs",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "unpkg": "umd/flare-core.min.js",
  "typings": "types/index.d.ts",
  "style": "css/flare-core.css",
  "scripts": {
    "docs": "typedoc src/index.tsx && replace '\\(README\\.md#' '(#' docs/README.md",
    "postinstall": "node patches.js",
    "precommit": "lint-staged",
    "prepublishOnly": "node -e \"['cjs', 'css', 'esm', 'types'].forEach(x => {try{require('fs').rmSync(x, { recursive: true })}catch(_){}})\" && node css && tsc --project tsconfig.types.json && tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json && rollup -c",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nsaunders/flare.git"
  },
  "keywords": [
    "flare",
    "applicative",
    "ui",
    "fp",
    "functional",
    "knobs",
    "controls"
  ],
  "author": "Nick Saunders",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nsaunders/flare/issues"
  },
  "homepage": "https://github.com/nsaunders/flare#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.1",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^27.0.1",
    "@types/react": "^18",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "autoprefixer": "^10.3.1",
    "cssnano": "^5.0.7",
    "eslint": "^7.32.0",
    "eslint-config-flare-prettier": "workspace:*",
    "eslint-config-flare-react": "workspace:*",
    "eslint-config-flare-react-typescript": "workspace:*",
    "eslint-config-flare-typescript": "workspace:*",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fp-ts": "^2.11.1",
    "jest": "^27.1.1",
    "lint-staged": "^11.0.0",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "prettier-config-flare": "workspace:*",
    "react-dom": "^18",
    "replace": "^1.2.1",
    "rollup": "^2.52.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.0",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.4",
    "typedoc-plugin-markdown": "^3.11.3",
    "typescript": "~4.3.5"
  },
  "dependencies": {
    "demitasse": "^1.0.1",
    "react": "^18"
  }
}
